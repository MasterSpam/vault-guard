<GridPane fx:id="viewPasswordPane" maxHeight="50.0" minHeight="-Infinity" minWidth="-Infinity" prefHeight="50.0"
          prefWidth="388.0" style="-fx-background-color: #3D3D3D;" xmlns="http://javafx.com/javafx/21"
          xmlns:fx="http://javafx.com/fxml/1">
    <columnConstraints>
        <ColumnConstraints hgrow="SOMETIMES" maxWidth="-Infinity" minWidth="-Infinity" prefWidth="90.0"/>
        <ColumnConstraints hgrow="ALWAYS" minWidth="10.0" prefWidth="100"/>
        <ColumnConstraints hgrow="SOMETIMES" maxWidth="-Infinity" minWidth="-Infinity" prefWidth="50.0"/>
        <ColumnConstraints hgrow="SOMETIMES" maxWidth="-Infinity" minWidth="-Infinity" prefWidth="50.0"/>
    </columnConstraints>
    <rowConstraints>
        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
    </rowConstraints>
    <Text fx:id="detailLabelPassword" fill="#b9b9b9" strokeType="OUTSIDE" strokeWidth="0.0" text="Password"
          GridPane.halignment="CENTER">
        <font>
            <Font name="Arial" size="14.0"/>
        </font>
        <GridPane.margin>
            <Insets/>
        </GridPane.margin>
    </Text>
    <Label fx:id="detailPassword" textFill="WHITE" layoutX="42.0" layoutY="39.0" text="••••••••"
           GridPane.columnIndex="1">
        <font>
            <Font name="Ayuthaya" size="24.0"/>
        </font>
        <GridPane.margin>
            <Insets bottom="20.0"/>
        </GridPane.margin>
    </Label>
    <Label fx:id="passwordStrengthLabel" style="-fx-background-color: #00AD3F;" text="Very Strong" textFill="WHITE"
           GridPane.columnIndex="1">
        <padding>
            <Insets left="5.0" right="5.0"/>
        </padding>
        <GridPane.margin>
            <Insets top="20.0"/>
        </GridPane.margin>
    </Label>
    <Button fx:id="passwordCopy" mnemonicParsing="false" prefHeight="30.0" prefWidth="30.0" styleClass="imageButton"
            style="-fx-cursor: 'hand';" GridPane.columnIndex="3" GridPane.halignment="CENTER">
        <graphic>
            <ImageView fitHeight="30.0" fitWidth="30.0" pickOnBounds="true" preserveRatio="true">
                <Image url="@../images/copy_icon.png"/>
            </ImageView>
        </graphic>
    </Button>
    <Button fx:id="viewPassword" layoutX="358.0" layoutY="20.0" mnemonicParsing="false" prefHeight="30.0"
            prefWidth="30.0" styleClass="imageButton" style="-fx-cursor: 'hand'" GridPane.columnIndex="2"
            GridPane.halignment="RIGHT">
        <graphic>
            <ImageView fitHeight="30.0" fitWidth="30.0" pickOnBounds="true" preserveRatio="true">
                <Image url="@../images/copy_icon.png"/>
            </ImageView>
        </graphic>
    </Button>
</GridPane>
