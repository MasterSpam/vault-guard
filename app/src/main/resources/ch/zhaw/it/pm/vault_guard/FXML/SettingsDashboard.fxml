<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<AnchorPane fx:id="settingsDashboard" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="ch.zhaw.it.pm.vault_guard.controller.SettingsController">
    <VBox minWidth="-Infinity" prefHeight="500.0" prefWidth="420.0" style="-fx-background-color: #1D1D1D;">
        <VBox VBox.vgrow="ALWAYS">
            <GridPane maxHeight="-Infinity" minHeight="-Infinity" prefHeight="135.0">
                <columnConstraints>
                    <ColumnConstraints hgrow="SOMETIMES" maxWidth="-Infinity" minWidth="-Infinity"
                                       prefWidth="15.0"/>
                    <ColumnConstraints hgrow="SOMETIMES" maxWidth="236.0" minWidth="144.0" prefWidth="165.0"/>
                    <ColumnConstraints hgrow="SOMETIMES" maxWidth="117.0" minWidth="-Infinity"
                                       prefWidth="96.0"/>
                    <ColumnConstraints hgrow="SOMETIMES" maxWidth="110.0" minWidth="-Infinity"
                                       prefWidth="110.0"/>
                    <ColumnConstraints hgrow="SOMETIMES" maxWidth="95.0" minWidth="-Infinity" prefWidth="34.0"/>
                </columnConstraints>
                <rowConstraints>
                    <RowConstraints maxHeight="-Infinity" minHeight="-Infinity" prefHeight="51.0"
                                    vgrow="SOMETIMES"/>
                    <RowConstraints maxHeight="-Infinity" minHeight="-Infinity" prefHeight="44.0"
                                    vgrow="SOMETIMES"/>
                    <RowConstraints maxHeight="-Infinity" minHeight="-Infinity" prefHeight="40.0"
                                    vgrow="SOMETIMES"/>
                </rowConstraints>
                <Text fill="WHITE" strokeType="OUTSIDE" strokeWidth="0.0" text="Settings"
                      GridPane.columnIndex="1" GridPane.rowIndex="1">
                    <font>
                        <Font name="System Bold" size="45.0"/>
                    </font>
                    <GridPane.margin>
                        <Insets left="10.0"/>
                    </GridPane.margin>
                </Text>
            </GridPane>
            <GridPane style="-fx-background-color: #1D1D1D;">
                <columnConstraints>
                    <ColumnConstraints hgrow="SOMETIMES" maxWidth="-Infinity" minWidth="-Infinity"
                                       prefWidth="180.0"/>
                    <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
                </columnConstraints>
                <rowConstraints>
                    <RowConstraints maxHeight="-Infinity" minHeight="-Infinity" prefHeight="40.0"
                                    vgrow="SOMETIMES"/>
                    <RowConstraints maxHeight="-Infinity" minHeight="-Infinity" prefHeight="40.0"
                                    vgrow="SOMETIMES"/>
                    <RowConstraints maxHeight="-Infinity" minHeight="-Infinity" prefHeight="40.0"
                                    vgrow="SOMETIMES"/>
                    <RowConstraints maxHeight="-Infinity" minHeight="-Infinity" prefHeight="20.0"
                                    vgrow="SOMETIMES"/>
                    <RowConstraints maxHeight="-Infinity" minHeight="-Infinity" prefHeight="40.0"
                                    vgrow="SOMETIMES"/>
                </rowConstraints>
                <VBox.margin>
                    <Insets left="15.0" right="15.0"/>
                </VBox.margin>
                <Text fill="WHITE" strokeType="OUTSIDE" strokeWidth="0.0" text="Account Username">
                    <font>
                        <Font size="15.0"/>
                    </font>
                    <GridPane.margin>
                        <Insets left="10.0"/>
                    </GridPane.margin>
                </Text>
                <Text fill="WHITE" strokeType="OUTSIDE" strokeWidth="0.0" text="Account Password"
                      GridPane.rowIndex="2">
                    <font>
                        <Font name="Arial Bold" size="15.0"/>
                    </font>
                    <GridPane.margin>
                        <Insets left="10.0"/>
                    </GridPane.margin>
                </Text>
                <TextField fx:id="accountUsername"
                           style="-fx-border-color: #777777; -fx-border-width: 3; -fx-background-color: #444444; -fx-text-fill: #FFFFFF"
                           GridPane.columnIndex="1">
                    <GridPane.margin>
                        <Insets right="10.0"/>
                    </GridPane.margin>
                    <font>
                        <Font name="Arial Bold" size="13.0"/>
                    </font>
                </TextField>
                <TextField fx:id="accountPassword" prefHeight="29.0" prefWidth="195.0"
                           style="-fx-border-color: #777777; -fx-border-width: 3; -fx-background-color: #444444; -fx-text-fill: #FFFFFF;"
                           GridPane.columnIndex="1" GridPane.rowIndex="2">
                    <GridPane.margin>
                        <Insets right="10.0"/>
                    </GridPane.margin>
                    <font>
                        <Font name="Ayuthaya" size="13.0"/>
                    </font>
                </TextField>
                <GridPane GridPane.columnIndex="1" GridPane.rowIndex="4">
                    <columnConstraints>
                        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0"/>
                        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0"/>
                    </columnConstraints>
                    <rowConstraints>
                        <RowConstraints minHeight="10.0" vgrow="SOMETIMES"/>
                    </rowConstraints>
                    <Button fx:id="generatePasswordButton" mnemonicParsing="false"
                            style="-fx-background-color: #5B858C" text="Generate" textFill="WHITE"
                            GridPane.valignment="TOP">
                        <font>
                            <Font name="Arial" size="12.0"/>
                        </font>
                    </Button>
                    <Button fx:id="editAccountButton" mnemonicParsing="false" text="Edit"
                            GridPane.columnIndex="1" GridPane.valignment="TOP">
                        <font>
                            <Font name="Arial" size="12.0"/>
                        </font>
                    </Button>
                </GridPane>
            </GridPane>
        </VBox>
        <GridPane maxHeight="-Infinity" minHeight="-Infinity" prefHeight="154.0" prefWidth="420.0">
            <columnConstraints>
                <ColumnConstraints hgrow="SOMETIMES" maxWidth="-Infinity" minWidth="-Infinity" prefWidth="175.0"/>
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
            </columnConstraints>
            <rowConstraints>
                <RowConstraints maxHeight="-Infinity" minHeight="-Infinity" prefHeight="51.0" vgrow="SOMETIMES"/>
                <RowConstraints maxHeight="89.0" minHeight="10.0" prefHeight="60.0" vgrow="SOMETIMES"/>
                <RowConstraints maxHeight="45.0" minHeight="0.0" prefHeight="0.0" vgrow="SOMETIMES"/>
                <RowConstraints maxHeight="46.0" minHeight="10.0" prefHeight="46.0" vgrow="SOMETIMES"/>
            </rowConstraints>
            <Button fx:id="cancelSettingsChangesButton" mnemonicParsing="false" prefWidth="75.0"
                    style="-fx-background-color: #666666; -fx-cursor: HAND;" text="Cancel" textFill="White"
                    GridPane.rowIndex="3">
                <font>
                    <Font name="Arial Bold" size="14.0"/>
                </font>
                <GridPane.margin>
                    <Insets bottom="20.0" left="20.0"/>
                </GridPane.margin>
            </Button>
            <Button fx:id="saveChangesButton" mnemonicParsing="false" prefWidth="75.0"
                    style="-fx-background-color: #5B858C; -fx-cursor: HAND;" text="Save" textFill="WHITE"
                    GridPane.columnIndex="1" GridPane.halignment="RIGHT" GridPane.rowIndex="3">
                <font>
                    <Font name="Arial Bold" size="14.0"/>
                </font>
                <GridPane.margin>
                    <Insets bottom="20.0" right="20.0"/>
                </GridPane.margin>
            </Button>
            <Button fx:id="deleteAccountButton" mnemonicParsing="false" style="-fx-background-color: #C7464D"
                    text="Delete Account" textFill="WHITE">
                <font>
                    <Font name="Arial Bold" size="15.0"/>
                </font>
                <GridPane.margin>
                    <Insets left="20.0"/>
                </GridPane.margin>
            </Button>
            <Text fx:id="deleteAccountWarning" fill="#fd1515" strokeType="OUTSIDE" strokeWidth="0.0"
                  text="Are you sure you want to delete your account ?" GridPane.rowIndex="1">
                <font>
                    <Font name="Arial Bold" size="15.0"/>
                </font>
                <GridPane.margin>
                    <Insets left="45.0"/>
                </GridPane.margin>
            </Text>
            <Button fx:id="confirmDeleteAccountButton" alignment="CENTER" graphicTextGap="0.0"
                    mnemonicParsing="false" style="-fx-background-color: #BC1818" text="Confirm Delete Account"
                    textFill="WHITE" GridPane.columnIndex="1" GridPane.halignment="RIGHT"
                    GridPane.valignment="CENTER">
                <font>
                    <Font name="Arial Bold" size="15.0"/>
                </font>
                <GridPane.margin>
                    <Insets left="10.0" right="20.0"/>
                </GridPane.margin>
            </Button>
        </GridPane>
    </VBox>
</AnchorPane>
